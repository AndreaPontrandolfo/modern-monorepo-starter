{
  "name": "modern-monorepo-starter",
  "private": true,
  "repository": "https://github.com/AndreaPontrandolfo/modern-monorepo-starter",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "manypkg:check": "manypkg check",
    "manypkg:fix": "manypkg fix",
    "ci:version": "pnpm changeset version",
    "ci:publish": "pnpm -r publish --access public"
  },
  "keywords": [],
  "author": "Andrea Pontrandolfo",
  "license": "MIT",
  "devDependencies": {
    "@changesets/cli": "2.22.0",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/node": "16.11.26",
    "husky": "7.0.4",
    "lint-staged": "^12.3.7",
    "pnpm": "6.32.6",
    "prettier": "2.6.2",
    "turbo": "1.2.1",
    "typescript": "4.6.3"
  },
  "packageManager": "pnpm@6.32.6",
  "engines": {
    "node": ">=12.6",
    "pnpm": ">=6.14.1"
  },
  "dependencies": {
    "@manypkg/cli": "0.19.1"
  }
}
